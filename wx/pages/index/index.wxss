.swiper{
    height: 450rpx;
}
.swiper swiper-item image{
    width: 100%;
    height: 100%;
}
.swiper swiper-item .title{
    display: block;
    width: 100%;
    height: 100rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: rgba(0,0,0,0.4);
    color: #fff;
    padding: 10rpx;
}
.news-item{
    width: 95%;
    height: 200rpx;
    margin: 7px auto;
    box-shadow: 0 0 5px 0 #ccc;
    display: flex;
    align-items: center;
}
.news-item-left{
    padding: 40rpx 15rpx;
}
.news-item-right{
    width: 30%;
    height: 70%;
    padding-right: 15rpx;
    margin-left: auto;
}
.news-item-right image{
    width: 100%;
    height: 100%;
}