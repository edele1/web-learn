/* pages/detail/detail.wxss */
@import "/wxParse/wxParse.wxss";
/* @import "/common/zhihu.wxss"; */
.art-header{
    width: 100%;
    height: 500rpx;
    color: #fff;
    position: relative;
}
.art-img{
    width: 100%;
    height: 100%;
}
.art-title{
    display: block;
    width: 100%;
    height: 100rpx;
    color: #fff;
    position: absolute;
    background-color: rgb(0,0,0,0.4);
    bottom: 0;
    left: 0;
    font-size: 37rpx;
}
.art-source{
    position: absolute;
    bottom: 8rpx;
    right: 8rpx;
    font-size: 26rpx;
}
.wxParse-script .wxParse-inline{
    display: none;
}
 